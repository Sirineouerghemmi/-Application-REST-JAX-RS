<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>TP333 REST API</display-name>
    
    <!-- Jersey Servlet Configuration -->
    <servlet>
        <servlet-name>Jersey REST API</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        
        <!-- Packages à scanner pour les ressources REST -->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.info.router</param-value>
        </init-param>
        
        <!-- Pour forcer la réponse JSON -->
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>org.glassfish.jersey.jackson.JacksonFeature</param-value>
        </init-param>
        
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <!-- Mapper toutes les requêtes /api/* vers Jersey -->
    <servlet-mapping>
        <servlet-name>Jersey REST API</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    
    <!-- Configuration CORS -->
    <filter>
        <filter-name>CORS</filter-name>
        <filter-class>com.info.filter.CorsFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>CORS</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <!-- Page d'accueil -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>